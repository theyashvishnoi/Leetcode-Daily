//best solution using c++ stl

class Solution {
public:
    void nextPermutation(vector<int>& nums) {
        vector<int> np;
        bool res = next_permutation(nums.begin(), nums.end());
        if(res==false){
            sort(nums.begin(), nums.end());
            return;
        }
        else{
            return;
        }    
    }
};
